//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//

Algoritmo Ejercicio_141
	
	
	Definir n COMO Real;
	Definir Cont COMO Entero;
	Definir Suma COMO Real;

	
	
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "Sumar 10 números";
	Escribir "*******************************************************************************************************************************************************************************************************";
	
	Escribir ();
	
	
	
	Repetir
		
		Escribir "Introduce un numero";
		Leer n ;
		Cont = Cont +1 ;
		Suma = Suma + n ;
		
	Hasta Que (Cont > 09);
	
	
	
	Escribir ();
	Escribir "La Suma es ";
	Escribir Suma;


	
	
FinAlgoritmo

