//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//

Algoritmo Ejercicio_120
	
	
	Definir num Como Real;
	Definir res Como Real;

	
	
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "Leer hasta encontrar número divisible por 5  ";
	Escribir "*******************************************************************************************************************************************************************************************************";
	
	Escribir "Introduce un numero ";
	Leer num ;
	Escribir "*****************************************************************************************************************************************************************************************************";
	
	
	res = num MOD 5
	
	Mientras (res <> 0) Hacer
		
		Escribir "Introduce un numero ";
		Leer num ;
		Escribir "*****************************************************************************************************************************************************************************************************";
		
		res = num MOD 5
		
	Fin Mientras
	
	Escribir "EL NUMERO ES DIVISIBLE DE 5 ";
	
	
	
	
FinAlgoritmo

