// Ejercicio Nº 111.- Ciclo Mientras Leer hasta que se ingrese un número par           
//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//

Algoritmo Ejercicio_111
	
	Definir Num COMO Real ; 
	Definir Resul COMO Real ; 
	
	
	
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "Leer hasta que se ingrese un número par";
	Escribir "*******************************************************************************************************************************************************************************************************";
	
	
	Escribir "INTRODUCE EL NUMERO " ;
	Leer Num;
	Escribir ();
	Resul = Num % 2 ;

	
	Mientras (Resul <> 0) Hacer
		Escribir ();
		Escribir "INTRODUCE EL NUMERO " ;
		Leer Num;
		Escribir ();
		Resul = Num % 2 ;
		
		
	Fin Mientras
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "ELNUMERO ES PAR";
	Escribir "*******************************************************************************************************************************************************************************************************";
	
	
	
	
FinAlgoritmo

