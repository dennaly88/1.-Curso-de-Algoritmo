//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//

Algoritmo Ejercicio_129
	
	
	Definir num Como Entero;
	Definir sum Como Entero;
	Definir p Como Caracter;

	
	Repetir
		Escribir "Introduce el Numero ";
		Leer num ;
		sum = sum + num ;
		Escribir ();

		Escribir "Quieres Seguir Si la Respuesta es SI presiona (d) o Salir (n)";
		Leer p ;

	Hasta Que (p == "n")
	
	Escribir "La Suma es "  sum;
	
	
	
FinAlgoritmo

