		Escribir nom;
		Escribir ();

		Escribir "*****************************************************************************************************************************************************************************************************";
		Escribir "Escribe tu nombre y lo mostrare ";
		Escribir "*******************************************************************************************************************************************************************************************************";
		
		Leer nom ;
		
		
		
	Fin Mientras
	
	
	
