Algoritmo Ejercicio_122
	
	
	Definir nom Como Caracter;
	
	
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "Leer y mostrar nombre hasta escribir fin ";
	Escribir "*******************************************************************************************************************************************************************************************************";
	
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "Escribe tu nombre y lo mostrare ";
	Escribir "*******************************************************************************************************************************************************************************************************";
	
	Leer nom ;
	
	
	Mientras (nom <> "fin") Hacer
