Algoritmo Ejercicio_131
	Definir Num COMO Real ; 
	Definir Resul COMO Real ; 
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "Contar cuántos números positivos se ingresan ";
	Escribir "*******************************************************************************************************************************************************************************************************";
	
	
	
	Repetir
		Escribir "INTRODUCE EL NUMERO " ;
		Leer Num;
		Escribir ();
		
		Si (Num > 0) Entonces
		Resul = Resul + 1 ;
		Fin Si
		
	Hasta Que (Num < 0)
	
	Escribir "LA SUMA DE LOS NUMEROS POSITIVOS ES : ", Resul ;
	
	
	
FinAlgoritmo

