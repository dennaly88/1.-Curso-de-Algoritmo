// Ejercicio Nº 60.- Condicional Multiple Menú de acciones en una app Segun opcion Hacer 1. Iniciar , 2. Pausar , 3. Detener , 4. Salir                                       
//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//

Algoritmo Ejercicio_60
	
	Definir Opc Como Entero ;
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir " Menú de Acciones :  " ;   
	Escribir " 1. Iniciar " ;   
	Escribir " 2. Pausar" ;   
	Escribir " 3. Detener" ;   
	Escribir " 4. Salir" ;   	
	Escribir "*******************************************************************************************************************************************************************************************************";
	Escribir ();
	Leer Opc;
	
    Si (Opc ==1)   Entonces
		Escribir ("Iniciar App");
		
	Sino Si (Opc ==2) Entonces
			Escribir ("Pausar App");
			
		Sino Si (Opc ==3) Entonces
				Escribir ("Detener App");
				
			Sino Si (Opc ==4) Entonces
					Escribir ("Sali App");
						
					SiNo 
						Escribir "NO CORRESPONDE A LAS OPCIONES QUE SON  (  1, 2, 3, 4 )" ;
						
				Fin Si
			Fin Si
		Fin Si
		
	Fin Si
FinAlgoritmo

