// Ejercicio Nº 114.- Ciclo Mientras Calcular promedio de números hasta ingresar -1          
//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//

Algoritmo Ejercicio_114
	
	
	Definir Prom Como Real;
	Definir Num Como Real;
	Definir cont Como Real;
	Definir Suma Como Real;


	
	
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir " Calcular promedio de números hasta ingresar -1 ";
	Escribir "*******************************************************************************************************************************************************************************************************";
	
	
	Num = 0 ;
	Suma = 0 ;
	cont = 0;
	Mientras (Num <> -1) Hacer
		
		Escribir "*****************************************************************************************************************************************************************************************************";
		Escribir "Introduce un Numero ";
		Escribir "*******************************************************************************************************************************************************************************************************";
		
		Leer Num ;
		
		Si (Num <> -1 ) Entonces
			Suma = Suma + Num ;
			cont = cont +1 ;
			
			
			
		Fin Si
		
		
		
		
		
	Fin Mientras
	
	Prom = Suma / cont ;
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "LA CANTIDAD DE NUMEROS SUMADAS SON : " cont;
	Escribir "EL PROMEDIO ES  : " Prom;
	Escribir "*******************************************************************************************************************************************************************************************************";
	
	
	
FinAlgoritmo

