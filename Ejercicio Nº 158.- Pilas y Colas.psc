//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//

Algoritmo Ejercicio_158
	
		Dimension pila[5] ;
		Definir tope  Como Entero;

		tope =5 ;
		Para i <- 1 Hasta 5 Hacer
			Leer pila[i]
		FinPara
		Mientras tope > 0 y pila[tope] MOD 2 <> 0 Hacer
			tope = tope - 1
		FinMientras
		Si tope > 0 Entonces
			Escribir "Encontrado par:", pila[tope]
		Sino
			Escribir "No hay pares"
		FinSi
		
		
FinAlgoritmo

	
	


