	Escribir "INTRODUCE LA CANTIDAD DE METROS" ;
	Leer Metros;
	Escribir ();
	
	
	Centimetros = Metros * Valor_Fijo ;
	
	Escribir "*****************************************************************";
	Escribir "LA CANTIDAD CONVERTIDA A CENTIMETROS ES     : "  , Centimetros ;
	Escribir "******************************************************************";
	
	Escribir ();
	Escribir ();
	
