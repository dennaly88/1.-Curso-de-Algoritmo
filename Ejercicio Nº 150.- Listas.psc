Algoritmo Ejercicio_150
	Dimension vector[5]
	Definir cont Como Entero

	
	Para i = 1 Hasta 5 Con Paso 1 Hacer
		Escribir "------------------------------------";
		Escribir "Ingrese el número ", i, ":"
		Escribir "------------------------------------";
		Escribir "";
		
		Leer vector[i]
	Escribir "------------------------------------";
	Escribir "Ingrese el número que desea buscar:"
	Escribir "------------------------------------";
	Escribir "";

		Si vector[i] MOD 2 = 0 Entonces
			cont = cont + 1
		FinSi
	FinPara
	
	Escribir "Cantidad de pares:", cont
	
FinAlgoritmo

