Algoritmo Ejercicio_149
		Dimension vector[5]
		Definir i, numeroBuscado Como Entero
		Definir encontrado Como Logico
		
		encontrado = Falso
		
		Para i = 1 Hasta 5 Con Paso 1 Hacer
			Escribir "------------------------------------";
			Escribir "Ingrese el número ", i, ":"
			Escribir "------------------------------------";
			Escribir "";

			Leer vector[i]
		FinPara
		Escribir "------------------------------------";
		Escribir "Ingrese el número que desea buscar:"
		Escribir "------------------------------------";
		Escribir "";


		Leer numeroBuscado
		
		Para i = 1 Hasta 5 Con Paso 1 Hacer
			Si vector[i] = numeroBuscado Entonces
				Escribir "------------------------------------";
				Escribir "Número encontrado en la posición ", i ;
				Escribir "------------------------------------";
				Escribir "";


				encontrado = Verdadero
			FinSi
		FinPara
		
		Si (encontrado = Falso) Entonces
			Escribir "------------------------------------------";
			Escribir "El número no se encuentra en el vector.";
			Escribir "------------------------------------------";
			Escribir "";


		FinSi

FinAlgoritmo

