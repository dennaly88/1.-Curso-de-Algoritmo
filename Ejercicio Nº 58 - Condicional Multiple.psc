Algoritmo Ejercicio_58
	
	Definir Edad Como Entero ;
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir " TARIFA DE TRANSPORTE : MENOR A  5  Gratis, MENOR O IGUAL 18  Tarifa estudiante MENOR A  65 Tarifa adulto  Y Tarifa tercera edad , INTRODUCCE TU EDAD  " ;   
	Escribir "*******************************************************************************************************************************************************************************************************";
	Escribir ();
	Leer Edad;
	
    Si (Edad < 5)   Entonces
		Escribir ("NO PAGA PASAJE");
		
	Sino Si (Edad <= 18) Entonces
			Escribir ("PAGA PASAJE DE ESTUDIANTE QUE ES 15 Bs");
			
