Algoritmo Ejercicio_68
	
	Definir Opc Como Entero;
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir " CLASIFICACIÓN DEL CLIMA SEGÚN LA TEMPERATURA :  " ;   
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir ();
	Escribir ();
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir " Vamos a Introducir los Grados debe ser entre -10 a 50 " ;   
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir ();
	Escribir " Introduce los Grados:  " ;   
	Leer Opc;
	
    Si (Opc < 0)   Entonces
		Escribir ("Muy frío");
		
	Sino Si (Opc < 15) Entonces
			Escribir ("Frío");
			
		Sino Si (Opc < 25) Entonces
				Escribir ("Templado");
				
			Sino Si (Opc < 36) Entonces
					Escribir ("Caliente");
		
				Sino Si (Opc > 36) Entonces
						Escribir ("Muy Caliente");
			SiNo 
				Escribir "NO CORRESPONDE A LAS OPCIONES QUE SON ENTRE   (  0 HASTA 50 )" ;
				
			Fin Si
			  Fin Si
			Fin Si
		Fin Si
	Fin Si
FinAlgoritmo

