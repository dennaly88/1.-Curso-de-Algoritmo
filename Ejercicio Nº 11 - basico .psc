// Ejercicio Nº 11.- basico  Calcular el IVA de una cantidad (IVA 18%) y mostrar el resultado por pantalla                                                             //
//--------------------------------------------------------------------------------------------------------------------------------------------------------------------//

Algoritmo Ejercicio_11
	
	Definir IVA Como Real
	Definir Compra Como Real
	Definir Total Como Real

	
	Escribir ();
	Escribir "*************************************************************";
	Escribir "PROGRAMA PARA CALCULAR EL IVA 18 % DE UNA COMPRA " ;
	Escribir "**************************************************************";
	
	
	Escribir "INTRODUCE EL MONTO DE LA COMPRA " ;
	Leer Compra;
	Escribir ();
	
	
	IVA = Compra *0.18
	Total = Compra + IVA ;
	
	
	
	
	Escribir "*****************************************************************";
	Escribir "EL MONTO DE LA COMPRA ES  : "  , Compra; 
	Escribir "EL IVA DE LA COMPRA ES    : "  , IVA;
	Escribir "EL TOTAL DE LA COMPRA ES   : "  , Total;


	Escribir "******************************************************************";
	
	
	
	
	
FinAlgoritmo


