//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//

Algoritmo Ejercicio_134
	
	Definir Num COMO Real;
	Definir Cont COMO Real;
	Definir Suma COMO Real;
	Definir Pro COMO Real;

	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "Calcular promedio hasta ingresar -1";
	Escribir "*******************************************************************************************************************************************************************************************************";
	
	Escribir ();
	
	Cont=0;
	Repetir
		Escribir "Introduce ";
		Leer Num ;
		
		
		
		Si (Num <> -1) Entonces
			Cont = Cont +1;
			Suma = Suma + Num ;
		Fin Si
		
		
		
	Hasta Que (Num == -1);
	
	Pro = Suma /Cont ;
	
	Escribir "El promedio es :" Pro;
	
	
	
FinAlgoritmo

