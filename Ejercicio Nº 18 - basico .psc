// Ejercicio Nº 18 - basico  Sumar los dígitos de un número de dos cifras y mostrar el resultado  
//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//

Algoritmo Ejercicio_18
	Definir num COMO Real ;
	Definir d1 COMO Real ;
	Definir d2 COMO Real ;
	Definir suma COMO Real ;
	
	
	
	Escribir ();
	Escribir "************************************************************************************************************";
	Escribir "PROGRAMA PARA SUMAR LOS DIGITOS DE UN NUMERO " ;
	Escribir "*************************************************************************************************************";
	
	
	Escribir "INTRODUCE EL NUMERO " ;
	Leer num;
	Escribir ();
	
	d1 <- num / 10
	d2 <- num % 10
	suma <- d1 + d2 ;
	
	
	Escribir "*****************************************************************";
	Escribir "EL NUMERO ES    : "  , num; 
	Escribir "EL PRIMER NUMERO ES    : "  , d1; 
	Escribir "EL SEGUNDO NUMERO ES    : "  , d2; 

	Escribir "*****************************************************************";
	Escribir "EL TOTAL DE LA SUMA ES   : "  , suma;
	Escribir "******************************************************************";
	
	
	
	
	
FinAlgoritmo


