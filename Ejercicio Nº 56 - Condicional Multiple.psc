	Escribir ();
	Leer Escala;
	
    Si (Escala =="A")   Entonces
		Escribir ("Excelente");
		
	Sino Si (Escala =="B") Entonces
			Escribir ("Bueno");
			
		Sino Si (Escala =="C") Entonces
