// Ejercicio Nº 17 - basico  Calcular el descuento en una compra (10%) y mostrar el resultado por pantalla  
//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//

Algoritmo Ejercicio_17
	Definir Compra COMO Real ;
	Definir Descuento COMO Real ;
	Definir Total COMO Real ;


	
	Escribir ();
	Escribir "************************************************************************************************************";
	Escribir "PROGRAMA PARA CALCULAR EL DESCUENTO DEL 10 % DE UNA COMPRA " ;
	Escribir "*************************************************************************************************************";
	
	
	Escribir "INTRODUCE EL MONTO DE LA COMPRA" ;
	Leer Compra ;
	Escribir ();
	
	 Descuento = Compra * 0.10 ;
	
	
	Total = Compra - Descuento ;
	
		
	Escribir "*****************************************************************";
	Escribir "VALOR DE LA COMPRA ES   : "  , Compra; 
	Escribir "VALOR DEL DESCUENTO ES     : "    , Descuento; 
	Escribir "*****************************************************************";
	Escribir "EL TOTAL DE LA COMPRA CON EL DESCUENTO ES  : "  , Total ;
	Escribir "******************************************************************";
	
	
	
	
	
FinAlgoritmo


