Algoritmo Ejercicio_145
	
	
	Definir cont COMO Entero;
	Definir Notas COMO Entero;
	Definir Suma COMO Real;
	Definir p COMO Real;

	
	
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "Calcular promedio de tres notas";
	Escribir "*******************************************************************************************************************************************************************************************************";
	
	Escribir ();
	
	cont = 1 
	
	
	
	Repetir
		
		Escribir "Introduce la Nota Numero : " , cont;
		Leer Notas
		Escribir ();
		Suma = Suma + Notas ; 
		cont = cont +1
		
	Hasta Que (cont > 3) 
	Escribir ();
	
	
	p = Suma / cont ;
	Escribir "El Promedio de las Tres Notas es " , p;

	
	
	
FinAlgoritmo

