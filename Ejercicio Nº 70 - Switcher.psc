//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//



Algoritmo Ejercicio_70
	
	Definir Operador Como Caracter
	
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "INGRESE LA OPCIÓN PARA REALIZAR LA OPERACION" ;
	Escribir "*******************************************************************************************************************************************************************************************************";
	Escribir ();
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir " Operaciones:  " ;   
	Escribir " +. Para la Suma" ;   
	Escribir " -. Para la Resta" ;   
	Escribir " *. Para la Multiplición" ; 
	Escribir " /. Para la División" ;
	Escribir "*******************************************************************************************************************************************************************************************************";
	Escribir ();
	Leer Operador;
	
	Segun ( Operador ) Hacer
		caso ("+"):
			      Escribir "La Operación es Sumar" ;
		caso ("-"):
			     Escribir "La Operación es Restar" ;
		caso ("*"):
			     Escribir "La Operación es Multiplicar" ;
	     caso ("/"):
				 Escribir "La Operación es Dividir" ;
		De Otro Modo:
			Escribir "NO DISPONIBLE" ;
	Fin Segun
FinAlgoritmo

