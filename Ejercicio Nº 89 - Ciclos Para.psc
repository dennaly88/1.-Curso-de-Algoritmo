Algoritmo Ejercicio_89
	
	Definir i Como Entero;
	Definir suma Como Entero;

	
	suma = 0;
	
	Para i=1  Hasta 100 Con Paso 1 Hacer
		
		suma=suma+1;
			
	Fin Para
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir " LA SUMA DE LOS NUMEROS DE 1 A 100 ES :  " suma ;   
