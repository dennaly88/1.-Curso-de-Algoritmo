Algoritmo Ejercicio_96
	
	
	Definir i Como Entero;
	Definir n Como Entero;
	Definir res Como Entero;


	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "Calcular el factorial de un número" ;
	Escribir "*******************************************************************************************************************************************************************************************************";
	Escribir ();
	Escribir "Introduce el numero para sacar el factorial"; 
	Leer n ;

	
	res = 1
	Para i = 1 Hasta n Con Paso 1 Hacer
		res= res * i
	FinPara
	Escribir "Factorial:", res
	
	
	
FinAlgoritmo

