	num = 0 ;
	cont = 0 ;
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "Escribe el numero";
	Escribir "*******************************************************************************************************************************************************************************************************";
	Leer num ;
	
	Mientras (num > 0 ) Hacer
		Escribir "*****************************************************************************************************************************************************************************************************";
