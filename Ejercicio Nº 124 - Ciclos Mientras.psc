	Definir sum Como Entero;
	Definir cont Como Entero;

	
	
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "Calcular la suma de tres numeros";
	Escribir "*******************************************************************************************************************************************************************************************************";
	
	num = 0 ; 
	cont = 1;
	
	Mientras cont <= 3 Hacer
