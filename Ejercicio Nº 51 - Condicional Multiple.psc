//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//

Algoritmo Ejercicio_51
	
	Definir Dia Como Entero
	
	
	Escribir "*****************************************************************************************************************************************************************************************************";
	Escribir "INGRESE EL VALOR DE EL DIA DE LA SEMANA DONDE 1 =  ES LUNES , 2 = ES MARTES , 3 = ES MIERCOLES ,4 = ES JUEVES , 5 = ES VIERNES , 6 = ES SABADO Y 7  = ES DOMINGO Y OTRA OPCION ES = NO DISPONIBLE" ;
	Escribir "*******************************************************************************************************************************************************************************************************";
	Escribir ();
	Leer Dia;
	
	Si (Dia == 1) Entonces
		Escribir ("EL DIA ES LUNES");

	Sino Si (Dia == 2) Entonces
			Escribir ("EL DIA ES MARTES");

		Sino Si (Dia == 3) Entonces
				Escribir ("EL DIA ES MIERCOLES");
				
			Sino Si (Dia == 4) Entonces
					Escribir ("EL DIA ES JUEVES");
					
				Sino Si (Dia == 5) Entonces
						Escribir ("EL DIA ES VIERNES");
						
					Sino Si (Dia == 6) Entonces
							Escribir ("EL DIA ES SABADO");
							
						Sino Si (Dia == 7) Entonces
								Escribir ("EL DIA ES DOMINGO");
								
							
					
				SiNo 
					Escribir "NO ES UNA OPCIÓN VALIDAD" ;
					
				Fin Si
			Fin Si
		Fin Si
	Fin Si
	Fin Si
Fin Si
Fin Si

	
	
FinAlgoritmo

