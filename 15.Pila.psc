//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------//

Algoritmo Pilas
		Dimension pila[5]
		Definir tope, i Como Entero
		
		tope <- 0
		
		// Insertar elementos en la pila
		Para i <- 1 Hasta 5 Con Paso 1 Hacer
			Escribir "Ingrese un valor para la pila:"
			Leer pila[i]
			tope <- tope + 1
		FinPara
		
		// Mostrar y "sacar" elementos de la pila
		Escribir "Contenido de la pila (de arriba hacia abajo):"
		Para i <- tope Hasta 1 Con Paso -1 Hacer
			Escribir pila[i]
		FinPara
	
FinAlgoritmo

